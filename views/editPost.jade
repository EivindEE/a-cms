include header
.container
	.row
		.span12
			- if (typeof(locals.query.warning) != 'undefined')
				.alert.alert-warning 
					strong= locals.query.warning 
					a( href="#{locals.host}/blog/#{post.slug}")  View Post
			h1= page.title
			p= page.content
			form(action="#{locals.host}/admin/posts/edit/save", method="post")
				input(type="hidden", name="post_id", value=locals.query.post_id)
				label Title
				input(type="text", name="title", value=post.title)
				
				label Slug
				input(type="text", name="slug", value=post.slug)
				
				br
				label Content
				textarea(name="content")=post.content
				br

				input.btn(type="submit")